<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.slukin.chat.client.controllers.AuthController">
    <Label layoutX="52.0" layoutY="46.0" text="Логин:"/>
    <TextField fx:id="loginField" layoutX="103.0" layoutY="42.0" onAction="#executeAuth"/>
    <Label layoutX="45.0" layoutY="95.0" text="Пароль:"/>
    <PasswordField fx:id="passwordField" layoutX="103.0" layoutY="91.0" onAction="#executeAuth"/>
    <Button fx:id="authButton" layoutX="110.0" layoutY="145.0" mnemonicParsing="false" onAction="#executeAuth"
            text="Войти в чат"/>
    <TextField fx:id="textField" onAction="#sendMessage" editable="false" layoutX="76.0" layoutY="145.0"
               visible="false"/>
</AnchorPane>
